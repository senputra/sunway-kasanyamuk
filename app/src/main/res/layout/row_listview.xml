<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginEnd="15dp"
    android:layout_marginHorizontal="15dp"
    android:layout_marginStart="15dp"
    android:orientation="horizontal"
    android:padding="5dp"
    tools:layout_editor_absoluteX="2dp"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/tvLocation"
        style="@style/tvLocation"
        android:text="Lantai 1: Dapur" />

    <TextView
        android:id="@+id/tvDimesion"
        style="@style/tvDimesion"
        android:text="1.3 X 1.4" />

    <TextView
        android:id="@+id/tvQuantity"
        android:text="1"
        style="@style/tvQuantity" />

    <TextView
        android:id="@+id/tvPerimeter"
        android:text="5 + 0.5 m"
        style="@style/tvPerimeter" />

    <TextView
        android:id="@+id/tvTotalPrice"
        android:text="Rp. 400000"
        style="@style/tvHarga" />
</android.support.v7.widget.LinearLayoutCompat>